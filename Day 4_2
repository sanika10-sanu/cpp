#include <iostream>
#include <cmath>

int main() {
    int n, i, flag = 0; 

    std::cout << "Enter a positive integer: ";
    std::cin >> n;

  
    if (n <= 1) {
        flag = 1;
    } else {
        
        for (i = 2; i <= std::sqrt(n); i++) {
            if (n % i == 0) {
               
                flag = 1; 
                break;
            }
        }
    }


    if (flag == 0) {
        std::cout << n << " is a prime number" << std::endl;
    } else {
        std::cout << n << " is not a prime number" << std::endl;
    }

    return 0;
}
